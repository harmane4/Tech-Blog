{{!-- Add a new post --}}
<h2>New Post</h2>
<form class="form newPost-form">
        <label for="newPostTitle">Title</label>
        <input type="text" name="newPostTitle" id="newPostTitle" />
        <label for="newPostContent">Content</label>
        <input type="text" name="newPostContent" id="newPostContent" />
        <button type="submit">Create</button>
</form>

{{#if posts.length}}
<section>
        <ol>
        {{#each posts as |post|}}
        <li>
         {{> post-details post}}
        </li>
        {{/each}}
        </ol>
</section>
{{/if}}

<script defer src="/js/createPost.js"></script>
